{
    "name": "joomla/view",
    "type": "joomla-package",
    "description": "Joomla View Package",
    "keywords": [
        "joomla",
        "framework",
        "view"
    ],
    "homepage": "https://github.com/joomla-framework/view",
    "license": "GPL-2.0-or-later",
    "require": {
        "php": "^7.2.5|~8.0.0|~8.1.0"
    },
    "require-dev": {
        "joomla/renderer": "2.0-dev",
        "phpunit/phpunit": "^8.5|^9.0"
    },
    "suggest": {
        "joomla/renderer": "Required to use Joomla\\View\\BaseHtmlView"
    },
    "autoload": {
        "psr-4": {
            "Joomla\\View\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Joomla\\View\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "extra": {
        "branch-alias": {
            "dev-2.0-dev": "2.0-dev"
        }
    }
}
